<div class="header">
  <h1>Articles</h1>
  <h2>Tolkien would be proud of this website</h2>
</div>

<div class="link-post btn btn-secondary">
  <%= link_to 'Create a new article', new_article_path, class:"link-post-btn" %>
</div>

<div class="container">
  <% @articles.each do |article| %>
  <div class="article">
    <li class="title"> <%= article.title %> </li>
    <li class="content"> <%= article.content %>
    <li class="delete"> <%= link_to "Delete", article_path(article),
    method: :delete, data: { confirm: "Are you sure?" } %> </li>
  </div>
  <% end %>
</div>

<div class="footer">
  <h2>Footer</h2>
</div>
